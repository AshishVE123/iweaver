<resources>
    <!-- Base application theme. -->
    <style name="Theme.iweaver" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Drawer" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#0000</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/test</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- No title bar style-->
    <style name="Theme.NoTitleBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/gray</item>


    </style>

    <style name="Widget.AppTheme.TextInputLayout.FilledBox.Dense" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        android:includeFontPadding="false"
        <item name="colorControlActivated">@color/black</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Theme.iweaver.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ispace.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ispace.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CalenderViewCustom" parent="Theme.iweaver">
        <item name="colorControlActivated">@color/background</item>
        <item name="android:textColorPrimaryInverse">@color/purple_700</item>
        // color of date selected.
    </style>

</resources>