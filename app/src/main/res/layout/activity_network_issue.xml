<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NetworkIssueActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/rl_toolbar_param"
            layout="@layout/layout_common_toolbar"></include>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_icon_params"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:layout_above="@+id/rl_title_params"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="90dp"
            android:src="@drawable/ic_cross"
            android:layout_height="90dp">

        </androidx.appcompat.widget.AppCompatImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_title_params"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="16sp"
            android:fontFamily="@font/sfprodisplaybold"
            android:textColor="@color/textcolor_light"
            android:text="Seems some issue in network. Please check your internet and try agaon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatTextView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rl_title_params"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_retry"
            android:text="Retry"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/bt_style"
            android:layout_width="90dp"
            android:layout_height="40dp">

        </androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>

</RelativeLayout>