<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    tools:context=".activity.PolicyActivity">

    <RelativeLayout
        android:id="@+id/rl_toolbar_param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/layout_common_toolbar"></include>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_toolbar_param"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        tools:ignore="WebViewLayout">
        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webView"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
       android:padding="15dp"
        android:background="@color/background"
        android:layout_height="70dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_decline"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center_horizontal|center"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bt_style"
            android:text="Decline"></androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_accept"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center_horizontal|center"
            android:layout_alignParentRight="true"
            android:background="@drawable/bt_style"
            android:text="Accept"></androidx.appcompat.widget.AppCompatButton>



    </RelativeLayout>
</RelativeLayout>