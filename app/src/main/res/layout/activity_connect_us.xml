<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activity.ConnectUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/include_layout"
            layout="@layout/layout_common_toolbar">

        </include>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_feedback"
            android:hint="Please share your concern"
            android:textSize="18sp"
            android:gravity="left|top"
            android:textColor="@color/textcolor_light"
            android:paddingLeft="10dp"
            android:fontFamily="@font/sfprodisplayregular"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/et_style" />

    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_submit"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/bt_style"
            android:fontFamily="@font/sfprodisplayregular"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="18sp"></androidx.appcompat.widget.AppCompatButton>


    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>